{
  "name": "sightline-extension",
  "displayName": "Sightline",
  "description": "VSCode extension for Sightline visual regression testing",
  "version": "0.1.2",
  "publisher": "lucidlayer",
  "license": "MIT",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/lucidlayer/sightline.git"
  },
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:sightline.openPanel",
    "onView:sightlinePanel",
    "onView:sightline"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sightline",
          "title": "Sightline",
          "icon": "images/icon.png"
        }
      ]
    },
    "views": {
      "sightline": [
        {
          "id": "sightlinePanel",
          "name": "Sightline Panel",
          "icon": "images/icon.png"
        }
      ]
    },
    "commands": [
      {
        "command": "sightline.openPanel",
        "title": "Sightline: Open Panel"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/vscode": "^1.98.0",
    "typescript": "^5.8.3"
  }
}
